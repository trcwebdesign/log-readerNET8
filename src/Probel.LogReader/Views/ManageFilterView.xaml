<UserControl
    x:Name="_self"
    x:Class="Probel.LogReader.Views.ManageFilterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:local="clr-namespace:Probel.LogReader.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ContextMenu x:Key="_fiterContextMenu">
            <MenuItem Command="{Binding Source={x:Reference _self}, Path=DataContext.DeleteCurrentFilterCommand}" Header="Delete this Filter" />
        </ContextMenu>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="S" Command="{Binding SaveAllCommand}" Modifiers="Ctrl" />
        <KeyBinding Key="N" Command="{Binding CreateFilterCommand}" Modifiers="Ctrl" />
        <KeyBinding Key="N" Command="{Binding CreateSubFilterCommand}" Modifiers="Ctrl+Shift" />
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ToolBarTray Grid.ColumnSpan="2">
            <ToolBar>
                <Button x:Name="SaveAll" ToolTip="Save all changes">
                    <iconPacks:PackIconModern Kind="Save" />
                </Button>
                <Button x:Name="DiscardAll" ToolTip="Discard changes">
                    <iconPacks:PackIconModern Kind="UndoCurve" />
                </Button>
                <Button x:Name="CreateFilter" ToolTip="New filter">
                    <iconPacks:PackIconForkAwesome Kind="PlusSquare" />
                </Button>
                <Separator />
                <Button x:Name="CreateSubFilter" ToolTip="New SUB filter">
                    <iconPacks:PackIconForkAwesome Kind="PlusSquare" />
                </Button>
            </ToolBar>
        </ToolBarTray>
        <HeaderedContentControl Grid.Row="1" Margin="10,10,10,10" Header="Filters">
            <ListView
                x:Name="Filters"
                cal:Message.Attach="[SelectionChanged] = [ActivateCurrentFilter]" DisplayMemberPath="Name"
                SelectedItem="{Binding CurrentFilter}">
                <ListView.InputBindings>
                    <KeyBinding Key="Delete" Command="{Binding DeleteCurrentFilterCommand}" />
                </ListView.InputBindings>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource _fiterContextMenu}" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </HeaderedContentControl>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="0,10,10,10">
            <ContentControl x:Name="ActiveItem" />
        </ScrollViewer>
    </Grid>
</UserControl>
