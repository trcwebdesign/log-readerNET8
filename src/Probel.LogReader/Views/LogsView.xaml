<UserControl
    x:Name="_self"
    x:Class="Probel.LogReader.Views.LogsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="http://www.caliburnproject.org"
    xmlns:conv="clr-namespace:Probel.LogReader.Converters" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Probel.LogReader.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:xcad="https://github.com/Dirkster99/AvalonDock"
    mc:Ignorable="d"
    cal:Message.Attach="[Gesture F5] = [RefreshLogs]" d:DesignHeight="450" d:DesignWidth="1024"
    KeyDown="OnKeyDown" KeyUp="OnUserControlPreviewKeyUp" Loaded="OnLoaded"
    Unloaded="OnUnloaded">
    <UserControl.Resources>
        <GridLength x:Key="DefaultHeight">400</GridLength>
        <sys:Double x:Key="AutoHideHeight">400</sys:Double>
        <GridLength x:Key="DefaultWidth">250</GridLength>
        <!--  ====  -->
        <conv:StringToDataGridGridLinesVisibilityConverter x:Key="StringToDataGridGridLinesVisibilityConverter" />
        <conv:TextToVisibilityConverter x:Key="TextToVisibilityConverter" />
        <conv:StringToOneLinerConverter x:Key="StringToOneLinerConverter" />
        <conv:UppercaseConverter x:Key="UppercaseConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <conv:TwoDigitsToFourDigitsYearConverter x:Key="TwoDigitsToFourDigitsYearConverter" />
        <conv:TwoDigitsToFullYearConverter x:Key="TwoDigitsToFullYearConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ToolBarTray>
            <ToolBar IsEnabled="{Binding IsEmpty, Converter={StaticResource InvertBooleanConverter}}" Template="{DynamicResource VSBlueToolBarControlTemplate}">
                <ToggleButton Command="{Binding FilterCommand}" IsChecked="{Binding IsTraceVisible, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconModern Kind="Eye" />
                </ToggleButton>
                <ToggleButton Command="{Binding FilterCommand}" IsChecked="{Binding IsDebugVisible, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconModern Kind="Bug" />
                </ToggleButton>
                <ToggleButton Command="{Binding FilterCommand}" IsChecked="{Binding IsInfoVisible, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconModern Kind="InformationCircle" />
                </ToggleButton>
                <ToggleButton Command="{Binding FilterCommand}" IsChecked="{Binding IsWarnVisible, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconModern Kind="Warning" />
                </ToggleButton>
                <ToggleButton Command="{Binding FilterCommand}" IsChecked="{Binding IsErrorVisible, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconModern Kind="Stop" />
                </ToggleButton>
                <ToggleButton Command="{Binding FilterCommand}" IsChecked="{Binding IsFatalVisible, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconModern Kind="SignStop" />
                </ToggleButton>
                <Separator />
                <Label>Search:</Label>
                <TextBox x:Name="_tbFilter" Width="150" KeyUp="OnSearchKeyUp" />
                <Button Click="OnClickResetFilter" Command="{Binding ResetFilterCommand}" ToolTip="Clear filter">
                    <iconPacks:PackIconModern Kind="ClearReflectHorizontal" />
                </Button>
            </ToolBar>
            <ToolBar IsEnabled="{Binding IsEmpty, Converter={StaticResource InvertBooleanConverter}}">
                <ToggleButton x:Name="IsThreadIdVisible">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Style.Triggers>
                                <DataTrigger Value="True" Binding="{Binding ElementName=IsThreadIdVisible, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                    <Setter Property="Content" Value="Hidesdsdf Thread id" />
                                </DataTrigger>
                                <DataTrigger Value="False" Binding="{Binding ElementName=IsThreadIdVisible, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                    <Setter Property="Content" Value="Showsddf Thread id" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Kind="TableColumn" />
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="True" Binding="{Binding ElementName=IsThreadIdVisible, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Hide Thread id" />
                                        </DataTrigger>
                                        <DataTrigger Value="False" Binding="{Binding ElementName=IsThreadIdVisible, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Show Thread id" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="IsLoggerVisible">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="TableColumn" />
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="True" Binding="{Binding ElementName=IsLoggerVisible, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Hide logger" />
                                        </DataTrigger>
                                        <DataTrigger Value="False" Binding="{Binding ElementName=IsLoggerVisible, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Show logger" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="_btnDetail" Click="OnToggleButtonClick" IsChecked="{Binding ElementName=_detailPane, Path=IsAutoHidden, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InvertBooleanConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Margin="0,0,5,0" VerticalAlignment="Center" VerticalContentAlignment="Center">
                            <iconPacks:PackIconMaterial.Style>
                                <Style TargetType="iconPacks:PackIconMaterial">
                                    <Style.Triggers>
                                        <DataTrigger Value="False" Binding="{Binding ElementName=_btnDetail, Path=IsChecked, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Kind" Value="Pin" />
                                        </DataTrigger>
                                        <DataTrigger Value="True" Binding="{Binding ElementName=_btnDetail, Path=IsChecked, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Kind" Value="PinOff" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconMaterial.Style>
                        </iconPacks:PackIconMaterial>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="False" Binding="{Binding ElementName=_btnDetail, Path=IsChecked, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Show details" />
                                        </DataTrigger>
                                        <DataTrigger Value="True" Binding="{Binding ElementName=_btnDetail, Path=IsChecked, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Hide details" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ToggleButton>
                <Button x:Name="ToggleSortLogs" IsEnabled="{Binding HasLogs}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Margin="0,0,5,0" VerticalAlignment="Center" VerticalContentAlignment="Center">
                            <iconPacks:PackIconMaterial.Style>
                                <Style TargetType="iconPacks:PackIconMaterial">
                                    <Style.Triggers>
                                        <DataTrigger Value="True" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Kind" Value="SortDescending" />
                                        </DataTrigger>
                                        <DataTrigger Value="False" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Kind" Value="SortAscending" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconMaterial.Style>
                        </iconPacks:PackIconMaterial>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="True" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Sort descending" />
                                        </DataTrigger>
                                        <DataTrigger Value="False" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Sort ascending" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
            <ToolBar IsEnabled="{Binding IsEmpty, Converter={StaticResource InvertBooleanConverter}}">
                <ToggleButton x:Name="_isListeningFile" IsChecked="{Binding IsListeningFile}" Visibility="{Binding CanListen, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="Radar" />
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="True" Binding="{Binding ElementName=_isListeningFile, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Stop listening" />
                                        </DataTrigger>
                                        <DataTrigger Value="False" Binding="{Binding ElementName=_isListeningFile, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}">
                                            <Setter Property="Text" Value="Start listening" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ToggleButton>
                <Button cal:Message.Attach="[Click] = [RefreshLogs]">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="Refresh" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
            </ToolBar>
            <ToolBar>

                <Button Click="OnLoadLayout" Visibility="{Binding ShowPersistenceButtons, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="TableArrowUp" />
                        <TextBlock Text="Load layout" />
                    </StackPanel>
                </Button>
                <Button Click="OnSaveLayout" Visibility="{Binding ShowPersistenceButtons, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="TableArrowDown" />
                        <TextBlock Text="Save layout" />
                    </StackPanel>
                </Button>
                <Button Click="OnDeleteLayout" Visibility="{Binding ShowPersistenceButtons, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="TableRemove" />
                        <TextBlock Text="Delete layout" />
                    </StackPanel>
                </Button>
                <Button Click="OnResetLayout">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Margin="0,0,5,0"
                            VerticalAlignment="Center" VerticalContentAlignment="Center"
                            Kind="TableHeart" />
                        <TextBlock Text="Reset layout" />
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <xcad:DockingManager
            x:Name="_dockingManager"
            Grid.Row="1"
            Margin="0,5,0,0"
            AllowMixedOrientation="True">
            <xcad:DockingManager.Theme>
                <Vs2013BlueTheme />
            </xcad:DockingManager.Theme>

            <xcad:LayoutRoot>
                <xcad:LayoutPanel Orientation="Horizontal">

                    <xcad:LayoutPanel Orientation="Vertical">
                        <xcad:LayoutDocumentPaneGroup>
                            <xcad:LayoutDocumentPane ShowHeader="False">
                                <xcad:LayoutDocument Title="Logs" CanClose="False" ContentId="_logs">
                                    <DataGrid
                                        x:Name="_logs"
                                        Grid.Row="1"
                                        AutoGenerateColumns="False" CanUserAddRows="False" CanUserReorderColumns="False"
                                        CanUserResizeRows="False" CanUserSortColumns="False" FontFamily="Consolas"
                                        FontSize="11"
                                        GridLinesVisibility="{Binding GridLinesVisibility, Converter={StaticResource StringToDataGridGridLinesVisibilityConverter}}"
                                        HorizontalGridLinesBrush="#0C000000" IsReadOnly="True"
                                        ItemsSource="{Binding Logs}"
                                        SelectionMode="Single" VerticalGridLinesBrush="#82000000">
                                        <DataGrid.Resources>
                                            <ResourceDictionary>
                                                <Style x:Key="{x:Type DataGridCell}" TargetType="{x:Type DataGridCell}">
                                                    <Setter Property="Background" Value="{x:Null}" />
                                                    <Setter Property="BorderBrush" Value="{x:Null}" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="{x:Null}" />
                                                            <Setter Property="Foreground" Value="{x:Static SystemColors.ControlTextBrush}" />
                                                            <Setter Property="FontWeight" Value="ExtraBold" />
                                                            <Setter Property="BorderBrush" Value="{x:Null}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                                <Style TargetType="{x:Type DataGridRow}">
                                                    <Setter Property="Background" Value="{x:Null}" />
                                                    <Setter Property="BorderBrush" Value="{x:Null}" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="{x:Null}" />
                                                            <Setter Property="BorderBrush" Value="{x:Null}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ResourceDictionary>
                                        </DataGrid.Resources>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Style.Triggers>
                                                    <DataTrigger Value="TRACE" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}">
                                                        <Setter Property="Background" Value="{DynamicResource LogTraceColour}" />
                                                    </DataTrigger>

                                                    <DataTrigger Value="DEBUG" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}">
                                                        <Setter Property="Background" Value="{DynamicResource LogDebugColour}" />
                                                    </DataTrigger>

                                                    <DataTrigger Value="INFO" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}">
                                                        <Setter Property="Background" Value="{DynamicResource LogInfoColour}" />
                                                    </DataTrigger>

                                                    <DataTrigger Value="WARN" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}">
                                                        <Setter Property="Background" Value="{DynamicResource LogWarnColour}" />
                                                    </DataTrigger>

                                                    <DataTrigger Value="ERROR" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}">
                                                        <Setter Property="Background" Value="{DynamicResource LogErrorColour}" />
                                                    </DataTrigger>

                                                    <DataTrigger Value="FATAL" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}">
                                                        <Setter Property="Background" Value="{DynamicResource LogFatalColour}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="(+)">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <iconPacks:PackIconOcticons HorizontalAlignment="Center" Kind="Check" Visibility="{Binding Exception, Converter={StaticResource TextToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Width="Auto" Binding="{Binding Time, StringFormat=HH:mm:ss.fff}" Header="Time" />
                                            <DataGridTextColumn Width="Auto" Binding="{Binding Level, Converter={StaticResource UppercaseConverter}}" Header="Level" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding ThreadId}"
                                                Header="ThreadId"
                                                Visibility="{Binding IsChecked, Source={x:Reference IsThreadIdVisible}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Logger}"
                                                Header="Logger"
                                                Visibility="{Binding IsChecked, Source={x:Reference IsLoggerVisible}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <DataGridTextColumn Width="*" Binding="{Binding Message, Converter={StaticResource StringToOneLinerConverter}}" Header="Message" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </xcad:LayoutDocument>
                            </xcad:LayoutDocumentPane>
                        </xcad:LayoutDocumentPaneGroup>
                        <xcad:LayoutAnchorablePaneGroup AllowDuplicateContent="False" DockHeight="{StaticResource DefaultHeight}">
                            <xcad:LayoutAnchorablePane>
                                <xcad:LayoutAnchorable
                                    x:Name="_detailPane"
                                    Title="Details"
                                    AutoHideHeight="{StaticResource AutoHideHeight}"
                                    CanAutoHide="True" CanClose="False" CanDockAsTabbedDocument="False"
                                    CanHide="False" ContentId="_detailPane">
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <!--  FIRST COLUMN  -->
                                        <StackPanel Grid.RowSpan="3" Margin="5">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Value="TRACE" Binding="{Binding Source={x:Reference _logs}, Path=SelectedItem.Level, Converter={StaticResource UppercaseConverter}}">
                                                            <Setter Property="Background" Value="{DynamicResource LogTraceColour}" />
                                                        </DataTrigger>

                                                        <DataTrigger Value="DEBUG" Binding="{Binding Source={x:Reference _logs}, Path=SelectedItem.Level, Converter={StaticResource UppercaseConverter}}">
                                                            <Setter Property="Background" Value="{DynamicResource LogDebugColour}" />
                                                        </DataTrigger>

                                                        <DataTrigger Value="INFO" Binding="{Binding Source={x:Reference _logs}, Path=SelectedItem.Level, Converter={StaticResource UppercaseConverter}}">
                                                            <Setter Property="Background" Value="{DynamicResource LogInfoColour}" />
                                                        </DataTrigger>

                                                        <DataTrigger Value="WARN" Binding="{Binding Source={x:Reference _logs}, Path=SelectedItem.Level, Converter={StaticResource UppercaseConverter}}">
                                                            <Setter Property="Background" Value="{DynamicResource LogWarnColour}" />
                                                        </DataTrigger>

                                                        <DataTrigger Value="ERROR" Binding="{Binding Source={x:Reference _logs}, Path=SelectedItem.Level, Converter={StaticResource UppercaseConverter}}">
                                                            <Setter Property="Background" Value="{DynamicResource LogErrorColour}" />
                                                        </DataTrigger>

                                                        <DataTrigger Value="FATAL" Binding="{Binding Source={x:Reference _logs}, Path=SelectedItem.Level, Converter={StaticResource UppercaseConverter}}">
                                                            <Setter Property="Background" Value="{DynamicResource LogFatalColour}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <StackPanel.Resources>
                                                <Style x:Key="LabelStyle" TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="5" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                                <Style x:Key="ValueStyle" TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="15,0,5,0" />
                                                </Style>
                                            </StackPanel.Resources>
                                            <TextBlock Style="{StaticResource LabelStyle}" Text="Time" />
                                            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding ElementName=_logs, Path=SelectedItem.Time, StringFormat=HH:mm:ss.fff}" />
                                            <TextBlock Style="{StaticResource LabelStyle}" Text="Level" />
                                            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding ElementName=_logs, Path=SelectedItem.Level}" />
                                            <TextBlock Style="{StaticResource LabelStyle}" Text="Thread Id" />
                                            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding ElementName=_logs, Path=SelectedItem.ThreadId}" />
                                        </StackPanel>

                                        <!--  SECOND COLUMN  -->
                                        <Grid Grid.Column="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="25" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Margin="5,5,0,0" Orientation="Horizontal">
                                                <TextBlock FontWeight="Bold" Text="Logger:" />
                                                <TextBlock Margin="5,0,0,0" Text="{Binding ElementName=_logs, Path=SelectedItem.Logger}" />
                                            </StackPanel>
                                            <GroupBox Grid.Row="1" Grid.Column="2" Header="Message">
                                                <TextBox
                                                    FontFamily="Consolas" HorizontalScrollBarVisibility="Auto" IsReadOnly="True"
                                                    Text="{Binding ElementName=_logs, Path=SelectedItem.Message}"
                                                    VerticalScrollBarVisibility="Auto" />
                                            </GroupBox>
                                            <GridSplitter
                                                Grid.Row="2" Grid.Column="2"
                                                Height="5"
                                                HorizontalAlignment="Stretch" />
                                            <GroupBox Grid.Row="3" Grid.Column="2" Header="Call stack">
                                                <TextBox
                                                    FontFamily="Consolas" HorizontalScrollBarVisibility="Auto" IsReadOnly="True"
                                                    Text="{Binding ElementName=_logs, Path=SelectedItem.Exception}"
                                                    VerticalScrollBarVisibility="Auto" />
                                            </GroupBox>
                                        </Grid>
                                    </Grid>
                                </xcad:LayoutAnchorable>
                                <xcad:LayoutAnchorable
                                    x:Name="_messageDetail"
                                    Title="Message"
                                    AutoHideHeight="{StaticResource AutoHideHeight}"
                                    CanAutoHide="True" CanClose="False" CanDockAsTabbedDocument="False"
                                    CanHide="False" ContentId="_messageDetail">
                                    <TextBox
                                        FontFamily="Consolas" HorizontalScrollBarVisibility="Auto" IsReadOnly="True"
                                        Text="{Binding ElementName=_logs, Path=SelectedItem.Message}"
                                        VerticalScrollBarVisibility="Auto" />
                                </xcad:LayoutAnchorable>
                                <xcad:LayoutAnchorable
                                    x:Name="_callstackDetail"
                                    Title="Call Stack"
                                    AutoHideHeight="{StaticResource AutoHideHeight}"
                                    CanAutoHide="True" CanClose="False" CanDockAsTabbedDocument="False"
                                    CanHide="False" ContentId="_callstackDetail">
                                    <TextBox
                                        FontFamily="Consolas" HorizontalScrollBarVisibility="Auto" IsReadOnly="True"
                                        Text="{Binding ElementName=_logs, Path=SelectedItem.Exception}"
                                        VerticalScrollBarVisibility="Auto" />
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                        </xcad:LayoutAnchorablePaneGroup>
                    </xcad:LayoutPanel>

                </xcad:LayoutPanel>

                <xcad:LayoutRoot.LeftSide>

                    <xcad:LayoutAnchorSide>

                        <xcad:LayoutAnchorGroup>

                            <xcad:LayoutAnchorable
                                Title=" Days "
                                AutoHideWidth="200" CanClose="False" CanHide="False"
                                ContentId="_days">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <Style TargetType="Button">
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Margin" Value="3,3,0,3" />
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <Button Click="OnExpandAll">
                                            <iconPacks:PackIconModern Kind="SectionExpandAll" />
                                        </Button>
                                        <Button Click="OnCollapseAll">
                                            <iconPacks:PackIconModern Kind="SectionCollapseAll" />
                                        </Button>
                                    </StackPanel>
                                    <TreeView
                                        x:Name="_treeView"
                                        Grid.Row="1"
                                        ItemsSource="{Binding Days}"
                                        SelectedItemChanged="OnTreeViewSelectedItemChanged">
                                        <TreeView.ItemContainerStyle>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                                            </Style>
                                        </TreeView.ItemContainerStyle>
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconModern x:Name="IconPack" Margin="0,2,5,2" />
                                                    <TextBlock x:Name="Date" Margin="0,2,5,2" VerticalAlignment="Center" />
                                                </StackPanel>
                                                <HierarchicalDataTemplate.Triggers>
                                                    <DataTrigger Value="1" Binding="{Binding Level}">
                                                        <Setter TargetName="Date" Property="Text" Value="{Binding Value, Converter={StaticResource TwoDigitsToFullYearConverter}}" />
                                                        <Setter TargetName="IconPack" Property="Kind" Value="Calendar" />
                                                    </DataTrigger>
                                                    <DataTrigger Value="2" Binding="{Binding Level}">
                                                        <Setter TargetName="Date" Property="Text" Value="{Binding Value, StringFormat=MMMM}" />
                                                        <Setter TargetName="IconPack" Property="Kind" Value="Calendar31" />
                                                    </DataTrigger>
                                                    <DataTrigger Value="3" Binding="{Binding Level}">
                                                        <Setter TargetName="Date" Property="Text" Value="{Binding Value, Converter={StaticResource TwoDigitsToFourDigitsYearConverter}}" />
                                                        <Setter TargetName="IconPack" Property="Kind" Value="Calendar14" />
                                                    </DataTrigger>
                                                </HierarchicalDataTemplate.Triggers>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </Grid>
                            </xcad:LayoutAnchorable>
                            <xcad:LayoutAnchorable
                                Title=" Filters "
                                AutoHideMinWidth="200" CanClose="False" CanHide="False"
                                ContentId="_filters">
                                <ListView cal:Message.Attach="[MouseDoubleClick] = [ExecuteFilter($this.SelectedItem)]" ItemsSource="{Binding Filters}" SelectedItem="{Binding SelectedFilter}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconModern VerticalAlignment="Center" Kind="Filter" />
                                                <Label VerticalAlignment="Center" Content="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </xcad:LayoutAnchorable>

                        </xcad:LayoutAnchorGroup>

                    </xcad:LayoutAnchorSide>

                </xcad:LayoutRoot.LeftSide>

                <xcad:LayoutRoot.RightSide>
                    <xcad:LayoutAnchorSide>
                        <xcad:LayoutAnchorGroup>
                            <xcad:LayoutAnchorable
                                Title=" Repositories "
                                AutoHideMinWidth="200" CanClose="False" CanHide="False"
                                ContentId="_repositories">
                                <ListView cal:Message.Attach="[MouseDoubleClick] = [LoadRepository($this.SelectedItem)]" ItemsSource="{Binding Repositories}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconModern VerticalAlignment="Center" Kind="Database" />
                                                <Label VerticalAlignment="Center" Content="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </xcad:LayoutAnchorable>
                        </xcad:LayoutAnchorGroup>
                    </xcad:LayoutAnchorSide>
                </xcad:LayoutRoot.RightSide>

            </xcad:LayoutRoot>

        </xcad:DockingManager>

        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="{Binding LogsCount, Mode=OneWay}" />
                    <Run Text="Item(s)" />
                </TextBlock>
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Repository:" />
                    <Run Text="{Binding RepositoryName, Mode=OneWay}" />
                </TextBlock>
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Date:" />
                    <Run FontWeight="Bold" Text="{Binding Date, Mode=OneWay, Converter={StaticResource TwoDigitsToFourDigitsYearConverter}}" />
                </TextBlock>
            </StatusBarItem>
            <Separator Visibility="{Binding IsFile, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" />
            <StatusBarItem>
                <TextBlock Visibility="{Binding IsFile, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Run Text="Source:" />
                    <Hyperlink Foreground="{StaticResource Colour.StatusText}" NavigateUri="{Binding FilePath, Mode=OneWay}" RequestNavigate="OnRequestNavigate">
                        <TextBlock Text="{Binding FilePath, Mode=OneWay}" />
                    </Hyperlink>
                </TextBlock>
            </StatusBarItem>
            <Separator />
            <StatusBarItem Visibility="{Binding IsListeningFile, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <TextBlock>
                    <Run Text="{Binding ChangeCount}" />
                    <Run Text="Change(s)" />
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem Visibility="{Binding FilterApplied, Converter={StaticResource StringToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <!--<StatusBarItem>-->
                <TextBlock>
                    <Run Text="Filter: " />
                    <Run Text="{Binding FilterApplied}" />
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Margin="-3" Orientation="Horizontal">
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Margin="0,0,5,0" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                <iconPacks:PackIconMaterial.Style>
                                    <Style TargetType="iconPacks:PackIconMaterial">
                                        <Style.Triggers>
                                            <DataTrigger Value="True" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                                <Setter Property="Kind" Value="SortAscending" />
                                                <Setter Property="ToolTip" Value="Sorted ascending" />
                                            </DataTrigger>
                                            <DataTrigger Value="False" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                                <Setter Property="Kind" Value="SortDescending" />
                                                <Setter Property="ToolTip" Value="Sorted descending" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </iconPacks:PackIconMaterial.Style>
                            </iconPacks:PackIconMaterial>
                            <TextBlock Margin="5,0,5,0">
                                <TextBlock.Resources>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Value="True" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                                <Setter Property="Text" Value="Ascending" />
                                            </DataTrigger>
                                            <DataTrigger Value="False" Binding="{Binding IsOrderByAsc, UpdateSourceTrigger=PropertyChanged}">
                                                <Setter Property="Text" Value="Descending" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Resources>
                            </TextBlock>
                        </StackPanel>
                    </StatusBarItem>
                    <Separator />
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Margin="0,0,5,0" Kind="AvTimer" />
                            <ComboBox
                                x:Name="_autoRefreshTimes"
                                Margin="0,-4,0,-4"
                                BorderThickness="0" Foreground="White" IsReadOnly="true"
                                SelectedIndex="0" SelectionChanged="OnAutoRefreshTimesSelectionChanged"
                                Style="{StaticResource VsBlueComboBoxStyle}">
                                <ComboBoxItem Content="0 sec" Tag="0" />
                                <ComboBoxItem Content="1 sec" Tag="1" />
                                <ComboBoxItem Content="2 sec" Tag="2" />
                                <ComboBoxItem Content="3 sec" Tag="3" />
                                <ComboBoxItem Content="4 sec" Tag="4" />
                                <ComboBoxItem Content="5 sec" Tag="5" />
                                <ComboBoxItem Content="6 sec" Tag="6" />
                                <ComboBoxItem Content="7 sec" Tag="7" />
                                <ComboBoxItem Content="8 sec" Tag="8" />
                                <ComboBoxItem Content="9 sec" Tag="9" />
                                <ComboBoxItem Content="10 sec" Tag="10" />
                                <ComboBoxItem Content="20 sec" Tag="20" />
                                <ComboBoxItem Content="30 sec" Tag="30" />
                                <ComboBoxItem Content="60 sec" Tag="60" />
                                <ComboBoxItem Content="2 min" Tag="120" />
                            </ComboBox>
                            <iconPacks:PackIconMaterial Margin="5,0,5,0" Kind="ClockOutline" />
                            <TextBlock Margin="5,0,5,0" Text="{Binding LastRefresh, StringFormat=HH:mm:ss}" />
                        </StackPanel>
                    </StatusBarItem>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
